@{
    ViewData["Title"] = "Home Page";
}
@model ICollection<Trivia_Group_Project.Models.GameModel>

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/jep1.jpg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption">
                <p>
                    Play the game!<br />
                    <a class="btn btn-default btn-default" href="/HomeController1/Index">
                        Click to Play
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/jep2.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption">
                <p>
                    You know you wanta!<br />
                    <a class="btn btn-default btn-default" href="/HomeController1/Index">
                        Click to Play
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/jep3.jpg" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption">
                <p>
                    Just do it!<br />
                    <a class="btn btn-default btn-default" href="/HomeController1/Index">
                        Click to Play
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/jep4.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption">
                <p>
                    Play the game!<br />
                    <a class="btn btn-default btn-default" href="/HomeController1/Index">
                        Click to Play
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<h2>Top Ten Highscores</h2>
<ol>
    @foreach (var highScore in Model)
    {
        <li>
            @highScore.Email
            <br />
            @highScore.Points
        </li>
    }
</ol>

